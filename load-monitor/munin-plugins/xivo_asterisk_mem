#!/bin/bash

case $1 in
    config)
        cat <<'EOM'
graph_title XIVO ASTERISK Memory usage
graph_vlabel asteriskmem
asteriskmem.label Asterisk memory
EOM
        exit 0;;
esac

raw_mem=`/bin/ps afxu | grep -e '/usr/sbin/asterisk' | grep -v 'grep' | awk -F" " '{print $6}'`
mem=$(( $raw_mem / 1024 ))
echo "asteriskmem.value" ${mem}

exit 0
